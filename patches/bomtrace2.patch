+			bomsh_watched_programs = bomsh_read_watched_programs(optarg);
+			break;
+		default:
+			error_msg_and_help(NULL);
+			break;
+		}
+	}
+
+	argv += optind;
+	argc -= optind;
+	if (argc <= 0) {
+		error_msg_and_help("must have PROG [ARGS]");
+	}
+	if (bomsh_detach_on_pid_programs) {
