+// get current working directory for a traced process.
+char * bomsh_get_pwd(struct tcb *tcp)
+{
+	static char pwddir[PATH_MAX] = "";
+	char cwd_file[32] = "";
+	sprintf(cwd_file, "/proc/%d/cwd", tcp->pid);
+	int bytes = readlink(cwd_file, pwddir, PATH_MAX);
+	if (bytes == -1) {
